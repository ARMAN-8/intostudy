        <section id="video-space">
                <div id="contentfulVideo">
                    


<section class="l-video-story l-content-container">
    <div class="l-video-block-container">
            <video id="university-video" preload="metadata" controls width="100%" src="https://media.intostudy.com/video/upload/f_auto,q_auto/v1601479906/Marketing_Team/QUB/Videos/Course_Subject/CN/International_Year_One_in_Management_and_Finance.mp4"></video>
